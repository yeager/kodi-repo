<?xml version="1.0" encoding="UTF-8"?>
<addons>
    <addon id="repository.yeager"
           name="Yeager Repository"
           version="1.0.0"
           provider-name="yeager">
        <requires>
            <import addon="xbmc.addon" version="12.0.0"/>
        </requires>
        <extension point="xbmc.addon.repository" name="Yeager Repository">
            <dir>
                <info compressed="false">https://yeager.github.io/kodi-repo/addons.xml</info>
                <checksum>https://yeager.github.io/kodi-repo/addons.xml.md5</checksum>
                <datadir zip="true">https://yeager.github.io/kodi-repo/</datadir>
            </dir>
        </extension>
        <extension point="xbmc.addon.metadata">
            <platform>all</platform>
            <summary lang="en_GB">Yeager's Kodi Add-on Repository</summary>
            <summary lang="sv_SE">Yeagers Kodi-tilläggsförråd</summary>
            <description lang="en_GB">Install and update add-ons from Yeager's repository, including Subtitle Translator.</description>
            <description lang="sv_SE">Installera och uppdatera tillägg från Yeagers förråd, inklusive Subtitle Translator.</description>
        </extension>
    </addon>
    <addon id="service.subtitletranslator"
           name="Subtitle Translator"
           version="0.8.2"
           provider-name="yeager">
        <requires>
            <import addon="xbmc.python" version="3.0.0"/>
            <import addon="script.module.requests" version="2.22.0"/>
            <import addon="tools.ffmpeg" version="6.0.0" optional="true"/>
        </requires>
        <extension point="xbmc.service" library="service.py" start="startup"/>
        <extension point="xbmc.addon.metadata">
            <platform>all</platform>
            <license>GPL-3.0-or-later</license>
            <summary lang="en_GB">Automatically translate embedded subtitles</summary>
            <summary lang="sv_SE">Översätt inbäddade undertexter automatiskt</summary>
            <description lang="en_GB">When no subtitle is available in your preferred language, this addon extracts embedded subtitles from the media file and translates them using DeepL, LibreTranslate, Google Translate, or other translation services. Now also supports external subtitle files!</description>
            <description lang="sv_SE">När ingen undertext finns tillgänglig på ditt föredragna språk extraherar detta tillägg inbäddade undertexter från mediafilen och översätter dem med DeepL, LibreTranslate, Google Translate eller andra översättningstjänster. Stödjer nu även externa undertextfiler!</description>
            <assets>
                <icon>resources/icon.png</icon>
                <fanart>resources/fanart.png</fanart>
            </assets>
            <news>v0.8.2 - Full translations for all 25 languages</news>
        </extension>
    </addon>
</addons>
